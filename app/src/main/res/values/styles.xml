<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar" />

    <style name="progress_bar_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- this is to consume focus of interaction behind the screen when the loading bar is visible -->
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="Divider">
        <item name="android:id">@id/divider</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_divider</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/header_divider_margin</item>
    </style>

    <!-- text -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- text CONTENT -->
    <style name="Text.Content">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Content.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Content.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- text TITLE -->
    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Bold.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Title.Bold.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- text HEADER -->
    <style name="Text.Title.Bold.Header">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Text.Title.Bold.Header.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Title.Bold.Header.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Title.Bold.Header.Dialog">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Title.Bold.Header.Dialog.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Title.Bold.Header.Dialog.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
